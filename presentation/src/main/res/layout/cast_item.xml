<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="credit"
            type="lv.st.sbogdano.domain.entity.Credit"/>

        <variable
            name="isCircularImageView"
            type="java.lang.Boolean"/>
    </data>

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/cast_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/cast_profile_image"
            android:scaleType="centerCrop"
            app:loadUrl="@{credit.profilePath}"
            app:isCircularImageView="@{true}"
            tools:src="@tools:sample/backgrounds/scenic"/>

    </FrameLayout>

</layout>