<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/rubik_regular</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatusBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Startup" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_startup</item>
    </style>
    
</resources>
